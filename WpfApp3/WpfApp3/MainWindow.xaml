<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Button Content="Button" Width="NaN" Background="#FFB02E2E"/>
        <Button Content="Button" DockPanel.Dock="Top" Height="40" Background="#FFDF40E6"/>
        <Button Content="Button" DockPanel.Dock="Bottom" Height="100" Background="#FF1D5ADB"/>
        <Button Content="Button" DockPanel.Dock="Right" Width="43" Background="#FF26B82A"/>
        <Button Content="Button" Width="97" Background="#FFA3D41E"/>
        <Button Content="Button" Width="189" Height="300" Background="#FFEA7D6C"/>
        <Button Content="Button" Width="132" Click="Button_Click_1" Background="#FF25B79D"/>
        <Button Content="Button" Width="300" Height="300" Click="Button_Click" Background="#FF3399DE"/>
    </DockPanel>
</Window>
