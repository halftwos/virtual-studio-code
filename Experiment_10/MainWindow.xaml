<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="数据库操作" Height="450" Width="800"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="姓名" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="10"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="10"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" Margin="10">
            <Button Content="查询" Click="查询_Click" Margin="5"/>
            <Button Content="报表查询" Click="报表查询_Click" Margin="5"/>
            <Button Content="增加" Click="增加_Click" Margin="5"/>
            <Button Content="删除" Click="删除_Click" Margin="5"/>
            <Button Content="修改" Click="修改_Click" Margin="5"/>
        </StackPanel>
        <DataGrid x:Name="DataGrid" Grid.Row="1" Grid.ColumnSpan="3" Margin="10"/>
    </Grid>
</Window>


